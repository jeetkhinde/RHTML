# RHTML Configuration File
# Copy this file to rhtml.toml and customize as needed

[project]
name = "my-rhtml-app"
version = "0.1.0"
author = "Your Name"

[server]
port = 3000
host = "127.0.0.1"
workers = 4

[routing]
# Enable case-insensitive routing (e.g., /About and /about match the same route)
case_insensitive = false

# Base path for all routes (e.g., "/app" makes routes like /app/users)
# base_path = "/app"

# Enforce trailing slashes
trailing_slash = false

[build]
output_dir = "dist"
static_dir = "static"
minify_html = false
minify_css = false

[dev]
hot_reload = true
port = 3000
open_browser = false
watch_paths = ["pages", "components", "static"]
